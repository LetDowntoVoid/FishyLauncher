{
  "name": "fishy-studioz",
  "version": "1.0.4-alpha",
  "author": "LetDowntoVoid",
  "description": "Fishy Studioz Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.fishystudioz.launcher",
    "productName": "Fishy Studioz Launcher",
    "files": [
      "**/*",
      "!dist",
      "!node_modules/.cache"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.14.1"
  }
}
